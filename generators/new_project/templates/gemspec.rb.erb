# coding: utf-8
lib = File.expand_path('../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

Gem::Specification.new do |spec|
  spec.name          = "<%= name.downcase %>"
  spec.version       = "0.1"
  spec.authors       = ["<%= user_name %>}"]
  spec.email         = ["<%= user_email %>"]

  spec.summary       = "Write a short summary, because Rubygems requires one."
  spec.description   = "Write a longer description or delete this line."
  spec.homepage      = "TODO: Put your project's website or public repo URL here."
  spec.license       = "MIT"

  spec.files         = `git ls-files -z`.split("\x0").reject do |f|
    f.match(%r{^(test|spec|features)/})
  end
  spec.bindir        = "bin"
  spec.executables   = spec.files.grep(%r{^bin/}) { |f| File.basename(f) }
  spec.require_paths = ["lib"]

  spec.add_development_dependency "bundler", "~> 1.13"
  spec.add_development_dependency "rake", "~> 10.0"
  spec.add_development_dependency "rspec", "~> 3.0"

  spec.add_development_dependency "watir", "~> 6.0"
  spec.add_development_dependency "selenium", "~> 3.0.2"
  spec.add_development_dependency "watir_drops", "~> 0.5.0"
  spec.add_development_dependency 'watir_model', "~> 0.2"
  spec.add_development_dependency "watir_session", "~> 0.2"
  spec.add_development_dependency "webdrivers", "~> 2.1"
end
